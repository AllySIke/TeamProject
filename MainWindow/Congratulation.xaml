<Window x:Class="MainWindow.Congratulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWindow"
        mc:Ignorable="d"
        Title="Congradulation" Height="250" Width="400">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Center" Height="100" Margin="130,100,0,0" VerticalAlignment="Top" Width="250" Source="https://avatanplus.com/files/resources/mid/58d0c20f6427c15aef760c32.png"/>
        <TextBlock HorizontalAlignment="Center" TextAlignment ="Center" TextWrapping="Wrap" Text = "Congratulations! Your result is Ы. Would you like to open the dictionary?" FontSize="20" Margin="0,40,0,100" ></TextBlock>
        <Button Background="PapayaWhip" Width="130" Height="70" Margin="0,120,240,0" Click="Dictionary_Click" Content="Open my dictionary"></Button>
        <Button  Width="50" Height="30" Margin="300,180,0,0" Click="Exit_Click"  Content="Exit"></Button>
    </Grid>
</Window>
