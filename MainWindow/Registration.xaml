<Window x:Class="MainWindow.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWindow"
        mc:Ignorable="d"
        Title="Register" Height="300" Width="300">
    <Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment ="Left" Margin="20,70,0,0">
            <TextBlock>Enter your name</TextBlock>
            <TextBox x:Name="name" Margin="5,0,0,180" Width="150" MaxWidth="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment ="Left" Margin="20,100,0,0">
            <TextBlock>Enter your email</TextBlock>
            <TextBox x:Name="email" Margin="5,0,0,150" Width="150" MaxWidth="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment ="Left" Margin="00,130,0,0">
            <TextBlock>Enter your password</TextBlock>
            <PasswordBox x:Name="password" Margin="5,0,0,120" Width="150" MaxWidth="200"></PasswordBox>
        </StackPanel>
        <Button Width ="40" Height="30" Margin ="0,100,0,0" >Enter</Button>
        <Button Width ="40" Height="30" Margin ="200,200,0,0" >Back</Button>
    </Grid>
</Window>
